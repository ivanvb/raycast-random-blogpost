{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "random-blogpost",
  "title": "random-blogpost",
  "description": "Fetches a random blogpost from Hey",
  "icon": "extension_icon.png",
  "author": "amn10",
  "categories": [
    "Applications"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Fetch random post",
      "description": "Fetches a random post and renders it as markdown.",
      "mode": "view"
    },
    {
      "name": "viewFavorites",
      "title": "View Favorites",
      "description": "View Favorite Articles",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.44.0",
    "@raycast/utils": "^1.4.8",
    "cheerio": "^1.0.0-rc.12",
    "node-html-markdown": "^1.2.2",
    "zustand": "^4.1.4"
  },
  "devDependencies": {
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
